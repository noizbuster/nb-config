{
  "name": "nb-config",
  "version": "0.2.0-beta.2",
  "description": "simple configuration manager",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "test": "npm run lint && NODE_ENV=test mocha --colors ./test/*.spec.js",
    "test:verbose": "npm run lint && NODE_ENV=test NB_CONFIG_VERBOSE=true mocha --colors ./test/*.spec.js",
    "test:watch": "NODE_ENV=test && npm run lint && mocha --colors -w ./test/*.spec.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/noizbuster/nb-config.git"
  },
  "keywords": [
    "noizbuster",
    "nb",
    "nodejs",
    "configuration",
    "config"
  ],
  "author": "NoizBuster <noizbuster@noizbuster.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/noizbuster/nb-config/issues"
  },
  "homepage": "https://github.com/noizbuster/nb-config#readme",
  "devDependencies": {
    "chai": "^4.3.4",
    "eslint": "^7.26.0",
    "fs-extra": "^10.0.0",
    "mocha": "^8.4.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "traverse": "^0.6.6"
  }
}
